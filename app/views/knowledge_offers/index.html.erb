<p id="notice"><%= notice %></p>

<h1>Knowledge Offers</h1>

<table>
  <thead>
    <tr>
      <th>Id str</th>
      <th>Description</th>
      <th>Callback url</th>
      <th>Approved</th>
      <th>Project</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @knowledge_offers.each do |knowledge_offer| %>
      <tr>
        <td><%= knowledge_offer.id_str %></td>
        <td><%= knowledge_offer.description %></td>
        <td><%= knowledge_offer.callback_url %></td>
        <td><%= knowledge_offer.approved %></td>
        <td><%= knowledge_offer.project %></td>
        <td><%= knowledge_offer.user %></td>
        <td><%= link_to 'Show', url_for(action: 'show', controller: 'knowledge_offers', project_id: @project.id, id: knowledge_offer.id) %></td>
        <td><%= link_to 'Edit', url_for(action: 'edit', controller: 'knowledge_offers', project_id: @project.id, id: knowledge_offer.id) %></td>
        <td><%= link_to 'Destroy', url_for(action: 'destroy', controller: 'knowledge_offers', project_id: @project.id, id: knowledge_offer.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

