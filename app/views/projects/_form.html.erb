<%= form_with(model: project, local: true) do |form| %>
  <% if project.errors.any? %>
    <div class="m-form__errors">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :id_str, "ID", class: "m-form__label" %>
    <%= form.text_field :id_str, id: :project_id_str, class: "m-form__input" %>
  </div>

  <div class="field">
    <%= form.label :title, "Title", class: "m-form__label" %>
    <%= form.text_field :title, id: :project_title, class: "m-form__input" %>
  </div>

  <div class="field">
    <%= form.label :description, "Description", class: "m-form__label" %>
    <%= form.text_field :description, id: :project_description, class: "m-form__input" %>
  </div>

  <div class="m-action-bar">
    <div class="m-action-bar__item">
      <%= form.submit "Submit", class: "m-button" %>
    </div>
    <div class="m-action-bar__item m-action-bar__item--right">
      <%= link_to "Cancel", projects_path, { class: "m-button" } %>
    </div>
  </div>
<% end %>
