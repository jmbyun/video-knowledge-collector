<div class="m-container">
  <div class="m-container__title">
    Forgot your password?
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email, class: "m-form__label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "m-form__input" %>
    </div>

    <div class="m-action-bar">
      <div class="m-action-bar__item">
        <%= f.submit "Send me reset password instructions", class: "m-button" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
