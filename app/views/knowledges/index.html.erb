<p id="notice"><%= notice %></p>

<h1>Knowledges</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Video</th>
      <th>Knowledge offer</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @knowledges.each do |knowledge| %>
      <tr>
        <td><%= knowledge.body %></td>
        <td><%= knowledge.video %></td>
        <td><%= knowledge.knowledge_offer %></td>
        <td><%= knowledge.user %></td>
        <td><%= link_to 'Show', url_for(action: 'show', controller: 'knowledges', project_id: @project.id, video_id: @video.id, id: knowledge.id) %></td>
        <td><%= link_to 'Edit', url_for(action: 'edit', controller: 'knowledges', project_id: @project.id, video_id: @video.id, id: knowledge.id) %></td>
        <td><%= link_to 'Destroy', url_for(action: 'destroy', controller: 'knowledges', project_id: @project.id, video_id: @video.id, id: knowledge.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

